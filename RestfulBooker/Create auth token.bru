meta {
  name: Create auth token
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/auth
  body: json
  auth: none
}

body:json {
  {
      "username" : "admin",
      "password" : "password123"
  }
}

assert {
  res.body.token: isDefined
  res.status: eq 200
}

script:post-response {
  let data = res.getBody();
  bru.setEnvVar("token",res.body.token);
}
